<!DOCTYPE html>
<html lang="en">
<title>{{title}}</title>
<main>
    <div>
        <h1>{{show.name}}</h1>
        <img src="{{show.image.medium}}">
        <dl>
            <dt>Langauge</dt>
            <dd>{{show.language}}</dd>
            <dt>Genres</dt>
            <dd>
                <ul>
                {{#each show.genres}}
                    <li>{{this}}</li>
                {{/each}}
                </ul>
            </dd>
            <dt>Average Rating</dt>
            <dd>{{show.rating.average}}</dd>
            <dt>Network</dt>
            <dd>{{show.network.name}}</dd>
            <dt>Summary</dt>
            <dd>{{summary}}</dd>
        </dl>
    </div>
    <a href="/">Make another search</a>
</main>
</html>